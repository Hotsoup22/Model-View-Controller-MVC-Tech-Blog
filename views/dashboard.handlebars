<section class="pageTitle">
    <h1>{{name}}'s Dashboard</h1>
</section>


<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a new blog post:</h3>

    <form class="form new-blog-post-form">
      <div class="form-group">
        <label for="title">title:</label>
        <input class="form-input" type="text" id="title" name="title" />
      </div>
      <div class="form-group">
        <label for="content">post:</label>
        <textarea class="form-input" id="content" name="content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if blogposts.length}}
  <div class="col-md-6 blog-post-list">
    <h3>Blog Posts:</h3>

    {{#each blogposts as |blog|}}
    <div class="card">
      <div class="col-md-8">
        <h4><a href="/blogs/{{blog.id}}">Post: {{blog.title}}</a></h4>
        <p>id: {{id}}</p>
        <p>{{blog.content}}</p>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>



<script src="/js/dashboard.js"></script>
